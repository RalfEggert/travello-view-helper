<?php if ($this->element->getOption('heading')) : ?>
    <h4>
        <?php echo $this->translate(
            $this->element->getOption('heading')
        ) ?>
    </h4>
<?php endif; ?>
<div class="form-group">
    <?php echo $this->formLabel($this->element); ?>
    <div class="col-sm-<?= $width ?>">
        <?php echo $this->formElement($this->element); ?>
        <?php echo $this->formElementErrors($this->element); ?>
        <?php if ($this->element->getOption('help_block')) : ?>
            <span class="fa fa-info-circle"></span>&nbsp;
            <?php
            echo $this->translate(
                $this->element->getOption('help_block')
            );
            ?>
